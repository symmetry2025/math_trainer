generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  parent
  student
  admin
  promoter
}

enum BillingSubscriptionStatus {
  none
  active
  past_due
  cancelled
}

enum AuthProvider {
  web
  max
}

enum IdentityProvider {
  password
  max
  telegram
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  displayName  String?
  passwordHash String
  role         Role     @default(student)
  emailVerifiedAt DateTime?
  maxUserId    String?  @unique
  authProvider AuthProvider @default(web)
  onboardingCompletedAt DateTime?
  trialEndsAt  DateTime?
  billingStatus BillingSubscriptionStatus @default(none)
  paidUntil    DateTime?
  cpSubscriptionId String?
  cpToken      String?
  cpCardMask   String?
  billingUpdatedAt DateTime?
  lastLoginAt  DateTime?
  lastSeenAt   DateTime?
  lastSeenPath String?
  lastTrainerAt DateTime?
  lastTrainerId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  authIdentities AuthIdentity[]
  authLinkTokens AuthLinkToken[]
  sessions Session[]
  emailConfirmationTokens EmailConfirmationToken[]
  trainerProgress TrainerProgress[]
  trainerAttempts TrainerAttempt[]
  achievements UserAchievement[]
  stats UserStats?

  promoterProfile Promoter?
  referralAttribution ReferralAttribution?

  parentInvite ParentInvite?
  childLinks ParentStudentLink[] @relation("ParentToChildren")
  parentLink ParentStudentLink? @relation("StudentToParent")

  subscriptionSeats SubscriptionSeat[] @relation("ParentToSubscriptionSeats")
  assignedSeat SubscriptionSeat? @relation("StudentToSubscriptionSeat")

  @@index([lastLoginAt])
  @@index([lastSeenAt])
  @@index([lastTrainerAt])
}

model AuthIdentity {
  id             String           @id @default(cuid())
  userId         String
  provider       IdentityProvider
  providerUserId String
  lastLoginAt    DateTime?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
  @@index([userId])
  @@index([provider])
}

model AuthLinkToken {
  id        String           @id @default(cuid())
  userId    String
  provider  IdentityProvider
  tokenHash String           @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([provider])
  @@index([expiresAt])
  @@index([usedAt])
}

model AuthProviderLinkRequest {
  id             String           @id @default(cuid())
  provider       IdentityProvider
  providerUserId String

  // One-time token to confirm linking from the web (after login).
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?

  createdAt DateTime @default(now())

  @@unique([provider, providerUserId])
  @@index([provider])
  @@index([expiresAt])
  @@index([usedAt])
}

model SubscriptionSeat {
  id        String @id @default(cuid())
  parentId  String
  status    BillingSubscriptionStatus @default(none)
  paidUntil DateTime?

  cpSubscriptionId String?
  cpToken          String?
  cpCardMask       String?
  billingUpdatedAt DateTime?

  assignedStudentId String?  @unique
  assignedAt        DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  parent         User  @relation("ParentToSubscriptionSeats", fields: [parentId], references: [id], onDelete: Cascade)
  assignedStudent User? @relation("StudentToSubscriptionSeat", fields: [assignedStudentId], references: [id], onDelete: SetNull)

  @@index([parentId])
  @@index([status])
  @@index([paidUntil])
  @@index([billingUpdatedAt])
}

model Promoter {
  id          String   @id @default(cuid())
  userId      String   @unique
  code        String   @unique
  displayName String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  referrals ReferralAttribution[]
}

model ReferralAttribution {
  id           String   @id @default(cuid())
  promoterId   String
  userId       String   @unique
  attributedAt DateTime @default(now())
  firstPaidAt  DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  promoter Promoter @relation(fields: [promoterId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([promoterId])
  @@index([attributedAt])
  @@index([firstPaidAt])
}

model ParentInvite {
  id        String   @id @default(cuid())
  parentId  String   @unique
  code      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  parent User @relation(fields: [parentId], references: [id], onDelete: Cascade)
}

model ParentStudentLink {
  id        String   @id @default(cuid())
  parentId  String
  studentId String   @unique
  createdAt DateTime @default(now())

  parent  User @relation("ParentToChildren", fields: [parentId], references: [id], onDelete: Cascade)
  student User @relation("StudentToParent", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([parentId, studentId])
  @@index([parentId])
  @@index([createdAt])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model EmailConfirmationToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@index([usedAt])
}

// Aggregated per-trainer progress (unlock state, stars, etc.).
// Stored as JSON to support different trainer families (column, mental-math, etc.).
model TrainerProgress {
  id        String   @id @default(cuid())
  userId    String
  trainerId String
  progress  Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, trainerId])
  @@index([userId])
  @@index([trainerId])
}

// Immutable attempt log for stats/achievements (success/fail history).
model TrainerAttempt {
  id        String   @id @default(cuid())
  userId    String
  trainerId String
  attemptId String?
  kind      String   // e.g. "column" | "mental"
  level     String   // e.g. "accuracy" | "speed" | "race" | "accuracy-choice"
  result    Json     // {correct,total,mistakes,time,won,stars,...}
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([trainerId])
  @@index([createdAt])
  @@unique([userId, trainerId, attemptId])
}

// Per-user achievement progress/unlock state (incrementally updated per attempt).
model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  progress      Json
  unlockedAt    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
  @@index([achievementId])
}

// Cheap per-user aggregates for stats/achievements (avoid scanning attempts history).
model UserStats {
  id                  String   @id @default(cuid())
  userId              String   @unique
  totalProblems       Int      @default(0)
  totalCorrect        Int      @default(0)
  totalMistakes       Int      @default(0)
  totalTimeSec        Int      @default(0)
  sessionsCount       Int      @default(0)
  perfectSessionsCount Int     @default(0)
  raceWinsCount       Int      @default(0)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

